<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
            prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.cd00827.OSSimulator.Kernel">


    <center>
        <VBox>
            <HBox>

            </HBox>
            <HBox>
                <Button fx:id="boot" text="Boot" onAction="#boot"/>
                <Button fx:id="shutdown" text="Shutdown" onAction="#shutdown"/>
            </HBox>
        </VBox>
    </center>

    <left>
        <VBox>
            <Text text="Input files"/>
            <ListView fx:id="input" />
            <HBox>
                <Button fx:id="add" text="Add" onAction="#addFile"/>
                <Button fx:id="remove" text="Remove" onAction="#removeFile"/>
                <Button fx:id="execute" text="Execute" onAction="#execute"/>
            </HBox>
        </VBox>
    </left>

    <bottom>
        <VBox>
            <Text text="Output"/>
            <ListView maxHeight="150" prefHeight="150" prefWidth="500" fx:id="output"/>
        </VBox>
    </bottom>

    <right>
        <HBox>
            <VBox>
                <Text text="Mailbox"/>
                <ListView fx:id="mailboxLog"/>
            </VBox>
            <VBox>
                <Text text="Execution trace"/>
                <ListView fx:id="execTrace"/>
            </VBox>
        </HBox>
    </right>

</BorderPane>